# General
defaults
tls on
#tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_nocertcheck
logfile ~/.msmtp.log

# Personal: Gmail
account Gmail
host smtp.gmail.com
port 587
protocol smtp
auth on
from fergus.bremner@gmail.com
user fergus.bremner@gmail.com
passwordeval gpg --no-tty -qd ~/.passwd/Gmail.gpg

# Work: Apollo TV
account ApolloTV
host smtp.gmail.com
port 587
protocol smtp
auth on
from fergus.bremner@apollo.tv
user fergus.bremner@apollo.tv
passwordeval gpg --no-tty -qd ~/.passwd/ApolloTV.gpg

account default : Gmail

